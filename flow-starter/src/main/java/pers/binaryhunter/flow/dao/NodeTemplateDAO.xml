<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.binaryhunter.flow.dao.NodeTemplateDAO">
	<sql id="getSequenceSql">
		<![CDATA[
			NEXTVALS('f_node_template', 1)
		]]>
	</sql>
	
	<sql id="whereClause">
        <if test="null != preId and '' != preId and null != actionKey and '' != actionKey">
            <![CDATA[
				and t.id in (
				  SELECT id_next FROM f_node_template_ref where id_curr = #{preId} and action_key = #{actionKey} and status = 1
				)
			]]>
        </if>
		<if test="null != id and '' != id">
			<![CDATA[
				and t.id = #{id}
			]]>
		</if>
		<if test="null != action and '' != action">
			<![CDATA[
				and t.action = #{action}
			]]>
		</if>
		<if test="null != idPre and '' != idPre">
			<![CDATA[
				and t.id_pre = #{idPre}
			]]>
		</if>
		<if test="null != idFlow and '' != idFlow">
			<![CDATA[
				and t.id_flow = #{idFlow}
			]]>
		</if>
		<if test="null != roles and '' != roles">
			<![CDATA[
				and t.roles = #{roles}
			]]>
		</if>
		<if test="null != cascade and '' != cascade">
			<![CDATA[
				and t.cascade = #{cascade}
			]]>
		</if>
		<if test="null != nodeDesc and '' != nodeDesc">
			<![CDATA[
				and t.node_desc = #{nodeDesc}
			]]>
		</if>
		<if test="null != status and '' != status">
			<![CDATA[
				and t.status = #{status}
			]]>
		</if>
		<if test="null != idIn and '' != idIn">
			<![CDATA[
				and t.id in (${idIn})
			]]>
		</if>
	</sql>
	
	<sql id="basicColumn">
		<trim suffixOverrides=",">
		<![CDATA[
			id,action,id_pre,id_flow,roles,`cascade`,node_desc,
		]]>
		</trim>
	</sql>
	
	<sql id="selectColumn">
		<trim suffixOverrides=",">
		<![CDATA[
			t.id as id,t.action as action,t.id_pre as idPre,t.id_flow as idFlow,t.roles as roles,t.cascade as `cascade`,t.node_desc as nodeDesc,t.create_time as createTime,t.update_time as updateTime,t.status as status
		]]>
		</trim>
	</sql>
	
	<!-- 获取唯一标识序列 -->
	<select id="getSequence" resultType="long">
		select <include refid="getSequenceSql"></include>
	</select>

	<!-- 获取唯一标识序列 -->
    <select id="getSequences" resultType="long">
        select NEXTVALS('f_node_template', #{0})
    </select>

	<!-- 新增 -->
	<insert id="create" parameterType="pers.binaryhunter.flow.bean.po.NodeTemplate">
		<selectKey keyProperty="id" order="BEFORE" resultType="long">
			select <include refid="getSequenceSql"></include>
		</selectKey>
		<![CDATA[
			insert into f_node_template ( 
		]]>
		<include refid="basicColumn"></include>
		<![CDATA[	
			 ) values (
		]]>
		<trim suffixOverrides=",">
		<![CDATA[
			#{id},#{action},#{idPre},#{idFlow},#{roles},#{cascade},#{nodeDesc},	
		]]>
		</trim>
		<![CDATA[
			 ) 
		]]>
	</insert>
	
	<!-- 批量新增 -->
	<insert id="createBatch" parameterType="java.util.List">
		<![CDATA[
			insert into f_node_template (  
		]]>
