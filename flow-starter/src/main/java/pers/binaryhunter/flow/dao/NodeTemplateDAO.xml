		<![CDATA[	
			 ) values 
		]]>
	    <foreach collection="list" item="item" open="(" close=")" separator="), ("> 
	        <include refid="getSequenceSql"></include>
			<trim suffixOverrides=",">
			<![CDATA[
				,#{item.action},#{item.idPre},#{item.idFlow},#{item.roles},#{item.cascade},#{item.nodeDesc},	
			]]>
			</trim>
	    </foreach>
	</insert>

	<!-- 修改 -->
	<update id="update" parameterType="pers.binaryhunter.flow.bean.po.NodeTemplate">
		<![CDATA[
			update f_node_template set
		]]>	
		<trim suffixOverrides=",">
		<![CDATA[
			action=#{action},
			id_pre=#{idPre},
			id_flow=#{idFlow},
			roles=#{roles},
			`cascade`=#{cascade},
			node_desc=#{nodeDesc},
			update_time=CURRENT_TIMESTAMP,
		]]>
		</trim>
		<![CDATA[
			where id = #{id}
		]]>
	</update>
		
